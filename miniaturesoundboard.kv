<SoundBoard>
    board: board
    metro: metronome
    sig: timesig
    tbox: t
    slidesection: slidesection

    BoxLayout:
        size: root.size
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: 1
            orientation: 'horizontal'
            Label:
                size_hint_x: 1.09
                text: '  Miniature\nSoundboard'

            BoxLayout:
                orientation: 'horizontal'
                size_hint_x: 3

                Button:
                    id: metronome
                    text: 'Metronome'
                    size_hint_x: 0.88
                    on_press: root.metB()
                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        id: t
                        text: '4/4 time'
                        size_hint_y: 1/3
                    TextInput:
                        id: timesig
                        size_hint_y: 1/3
                        multiline: False
                    Button:
                        size_hint_y: 1/3
                        text: 'Submit'
                        on_press: root.submit()

                Button:
                    text: 'Record and Slider functionality will be added later'
                    size_hint_x: 4

        BoxLayout:
            size_hint_y: 4
            orientation: 'horizontal'

            GridLayout:
                id: board
                cols: 5

                size_hint_x: 4

            BoxLayout:
                orientation: 'vertical'
                id: slidesection
                size_hint_x: 2








